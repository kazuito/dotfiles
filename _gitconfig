[user]
    name = Kazuito
    email = kazit.kazuito@gmail.com
[color]
    # Color setting (以下のコマンドは自動で色を付ける)
    status = auto
    diff = auto
    interactive = auto
    grep = auto
[push]
    default = upstream
[core]
    editor = vim -c \"set fenc=utf-8\"
    excludesfile = /Users/taka/.gitignore_global
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[merge]
    tool = vimdiff
    ff = false
[diff]
    tool = vimdiff
[alias]
    s = status
    st = status
    sh = show
    so = remote show origin
    # pull / push / fetch
    ft = fetch
    # commit
    ad = add
    c = commit
    ci = commit -a # All modified files
    cad = commit -m 'Add' -m ''
    cmd = commit -m 'Modify' -m ''
    cdl = commit -m 'Deleted' -m ''
    ccr = commit -m 'Created' -m ''
    ccre = commit -m 'Created' -m ''
    cre = commit -m 'Created' -m ''
    cam = commit -a --amend
    co = checkout
    # branch
    br = branch
    ba = branch -a
    bm = branch --merged    # Show merged branches
    bn = branch --no-merged
    # reset
    r    = reset HEAD
    r1   = reset HEAD~
    r2   = reset HEAD~~
    r3   = reset HEAD~~~
    r4   = reset HEAD~~~~
    r5   = reset HEAD~~~~~
    rsh  = reset --soft HEAD
    rsh1 = reset --soft HEAD~
    rsh2 = reset --soft HEAD~~
    rsh3 = reset --soft HEAD~~~
    rsh4 = reset --soft HEAD~~~~
    rsh5 = reset --soft HEAD~~~~~
    rhh  = reset --hard HEAD # 取り返しのつかないことをしてしまった！
    rhh1 = reset --hard HEAD~
    rhh2 = reset --hard HEAD~~
    rhh3 = reset --hard HEAD~~~
    rhh4 = reset --hard HEAD~~~~
    rhh5 = reset --hard HEAD~~~~~
    # diff
    di = diff
    dm = diff master        # master との diff
    dw = diff --color-words # 単語単位で色をつけて diff
    dc = diff --cached      # add されているものとの diff
    ds = diff --staged      # 同上
    d1 = diff HEAD~
    d2 = diff HEAD~~
    d3 = diff HEAD~~~
    d4 = diff HEAD~~~~
    d5 = diff HEAD~~~~~
    # grep
    gr = grep
    gn = grep -n

